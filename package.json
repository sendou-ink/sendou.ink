{
	"name": "sendou.ink",
	"version": "3.0.0",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"deploy": "npm ci && npm run build",
		"build": "vite build",
		"preview": "vite preview",
		"build:experimental": "tsx scripts/build-with-all-locales.ts",
		"dev": "cross-env DB_PATH=db.sqlite3 npm run migrate up && npm run setup && vite dev",
		"dev:only": "cross-env DB_PATH=db-prod.sqlite3 vite dev",
		"dev:prod": "DB_PATH=db-prod.sqlite3 VITE_PROD_MODE=true npm run dev",
		"start": "npm run migrate up && remix-serve ./build/server/index.js",
		"migrate": "ley",
		"check-translation-jsons": "node --experimental-strip-types scripts/check-translation-jsons.ts",
		"check-translation-jsons:no-write": "node --experimental-strip-types scripts/check-translation-jsons.ts --no-write",
		"check-homemade-badges": "node --experimental-strip-types scripts/check-homemade-badges.ts",
		"check-articles": "tsx scripts/check-articles.ts",
		"refresh-prod-db": "node --experimental-strip-types scripts/refresh-prod-db.ts && cross-env DB_PATH=db-prod.sqlite3 npm run migrate up",
		"typecheck": "tsc --noEmit",
		"test:unit": "cross-env VITE_SITE_DOMAIN=http://localhost:5173 vitest --silent=passed-only run",
		"test:e2e": "npx playwright test",
		"test:e2e:flaky-detect": "npx playwright test --repeat-each=10 --max-failures=1",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint . --ignore-pattern 'app/*' --ignore-pattern 'scripts/*'",
		"checks": "npm run check && npm run lint && npm run test:unit && npm run check-translation-jsons",
		"setup": "cross-env DB_PATH=db.sqlite3 tsx ./scripts/setup.ts",
		"i18n:sync": "i18next-locales-sync -e true -p en -s da de es-ES es-US fr-CA fr-EU he it ja ko nl pl pt-BR ru zh -l locales && npm run biome:fix"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.797.0",
		"@aws-sdk/lib-storage": "^3.797.0",
		"@date-fns/tz": "^1.2.0",
		"@epic-web/cachified": "^5.5.2",
		"@faker-js/faker": "^9.7.0",
		"@hookform/resolvers": "^5.1.1",
		"aws-sdk": "^2.1692.0",
		"better-sqlite3": "^11.9.1",
		"compressorjs": "^1.2.1",
		"date-fns": "^4.1.0",
		"edmonds-blossom-fixed": "^1.0.1",
		"gray-matter": "^4.0.3",
		"ics": "^3.8.1",
		"isbot": "^5.1.27",
		"kysely": "^0.28.2",
		"lru-cache": "^11.1.0",
		"markdown-to-jsx": "^7.7.6",
		"nanoid": "^5.1.5",
		"neverthrow": "^8.2.0",
		"node-cron": "3.0.3",
		"nprogress": "^0.2.0",
		"openskill": "^4.1.0",
		"p-limit": "^6.2.0",
		"partysocket": "^1.1.3",
		"remeda": "^2.21.3",
		"slugify": "^1.6.6",
		"web-push": "^3.6.7",
		"zod": "^3.25.61"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.32.0",
		"@playwright/test": "^1.52.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "https://pkg.pr.new/sveltejs/kit/@sveltejs/kit@44f3c63",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node-cron": "^3.0.11",
		"@types/nprogress": "^0.2.3",
		"@types/web-push": "^3.6.4",
		"babel-plugin-react-compiler": "^19.1.0-rc.2",
		"cross-env": "^7.0.3",
		"dotenv": "^17.2.1",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^16.3.0",
		"i18next-locales-sync": "^2.1.1",
		"ley": "^0.8.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"sql-formatter": "^15.6.1",
		"svelte": "^5.36.17",
		"svelte-check": "^4.0.0",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0",
		"vite": "^7.0.6",
		"vite-plugin-babel": "^1.3.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4",
		"@inlang/paraglide-js": "2.2.0"
	}
}
